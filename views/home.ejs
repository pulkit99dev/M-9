<link rel="stylesheet" href="/css/home.css" />
<h1>Home Page for my application <%= title %></h1>

<div>
  <h2>POST</h2>
  <section>
    <div>
      <% if (locals.user) { %>
      <form action="/post/create" method="post">
        <textarea
          name="content"
          cols="30"
          rows="3"
          placeholder="Write here...."
          required
        ></textarea>
        <button type="submit">Post</button>
      </form>
      <% } %>
    </div>
    <div>
      <ul>
        <% for (post of posts) { %>
        
          <%- include('_post') -%>

        <% } %>
      </ul>
    </div>
  </section>
</div>